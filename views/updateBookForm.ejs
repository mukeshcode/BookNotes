
<main>
  <form action="/updateBook/<%=book.id%>" method="POST">
    <input type="text" placeholder="Book Name" name="name" id="name" value="<%=book.name%>" required>
    <br>
    <input type="date" placeholder="Date read" name="date_read" id="date_read" value=<%= book.date_read %>>
    <br>
    <input type="text" placeholder="ISBN No. " name="isbn" id="isbn" value=<%=book.isbn%> required>
    <br>
    <input type="number" placeholder="Ratings" name="rating" id="rating" value=<%= book.rating %> min="1" max="5">
    <br>
    <input type="text" placeholder="Author" name="author" id="author" value="<%= book.author %>" required>
    <br>
    <input type="text" placeholder="Amazon|Flipkart link" name="link" id="link" value=<%=book.link%>>
    <br>
    Complete
    <input type="radio" id="complete_true" name="complete" value="true" <%= book.complete == true ? "checked" : ""%> required>
    <label for="complete_true">Yes</label>
    <input type="radio" id="complete_false" name="complete" value="false" <%= book.complete == false ? "checked" : ""%> required>
    <label for="complete_false">No</label>
    <br>
    <button type="submit">Update Information</button>
  </form> 
</main>